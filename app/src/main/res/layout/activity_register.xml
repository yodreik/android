<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RegisterActivity">
    <TextView
            android:text="Create an account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/heading"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498" app:layout_constraintTop_toTopOf="parent"
            android:textSize="20sp"
            android:layout_marginTop="210dp" android:textStyle="bold"/>

    <Button
            android:text="Create"
            android:layout_width="120dp"
            android:layout_height="40dp" android:id="@+id/buttonLogin"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:onClick="createButtonOnClick"
            app:layout_constraintTop_toBottomOf="@+id/inputRetypePassword" android:layout_marginTop="15dp"
            app:layout_constraintHorizontal_bias="0.498"
            android:backgroundTint="@color/accent" android:textStyle="bold" android:textColor="@color/black"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/inputUsername"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/heading" android:layout_marginTop="15dp"
            android:hint="Username"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/inputLogin"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/inputUsername"
            app:layout_constraintHorizontal_bias="0.497" android:layout_marginTop="15dp" android:hint="Email"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/inputPassword"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/inputLogin"
            app:layout_constraintHorizontal_bias="0.502" android:layout_marginTop="15dp" android:hint="Password"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/inputRetypePassword"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/inputPassword"
            app:layout_constraintHorizontal_bias="0.502" android:layout_marginTop="15dp"
            android:hint="Retype Password"/>
    >
    <Button
            android:text="Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:backgroundTint="@color/accent" android:textColor="@color/black" android:textStyle="bold"
            android:layout_marginTop="10dp" android:layout_marginStart="10dp" android:onClick="backButtonOnClick"/>
</androidx.constraintlayout.widget.ConstraintLayout>