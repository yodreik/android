<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment" android:foregroundTint="#FFFFFF"
>

    <ImageView
        android:src="@drawable/welcome"
        android:layout_width="wrap_content"
        android:layout_height="920dp" android:id="@+id/imageView" app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
    />

    <Button
            android:text="@string/home_button_create_workout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/createWorkoutButton"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/black" android:backgroundTint="@color/accent"
    />

</androidx.constraintlayout.widget.ConstraintLayout>
