<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginActivity">

    <TextView
            android:text="Log In"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/heading"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498" app:layout_constraintTop_toTopOf="parent"
            android:textSize="20sp"
            android:layout_marginTop="232dp" android:textStyle="bold"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/editTextTextEmailAddress"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497" app:layout_constraintTop_toBottomOf="@+id/heading"
            android:layout_marginTop="15dp" android:hint="Email"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editTextTextPassword"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextEmailAddress"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="15dp" android:hint="Password"/>
    <Button
            android:text="Log In"
            android:layout_width="120dp"
            android:layout_height="40dp" android:id="@+id/buttonCreate"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextPassword" android:layout_marginTop="15dp"
            android:onClick="loginButtonOnClick" android:textColor="@color/black" android:backgroundTint="@color/accent"
    />
    <TextView
            android:text="Don't have an account?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView2"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="148dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonCreate" android:layout_marginTop="12dp"/>
    <TextView
            android:text="Create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView3"
            android:textColor="#2196F3" app:layout_constraintStart_toEndOf="@+id/textView2"
            android:layout_marginStart="12dp" app:layout_constraintTop_toBottomOf="@+id/buttonCreate"
            android:layout_marginTop="12dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>